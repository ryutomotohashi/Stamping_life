<div class = "container py-5">
  <div class = "row">
    <div class = "col-8">
      <h3>打刻する目標を決めよう</h3>
        <%= form_with model: @stamp, url: stamps_path, local: true do |f| %>
          <div class = "mb-3">
            <%= f.label :target_id, "目標を選択"%><br>
            <%= f.select :target_id, options_from_collection_for_select(@target, :id, :title) %>
          </div>
          <div class = "mb-3">
            <%= f.submit "この目標で打刻する", class: "btn btn-secondary btn-lg"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!--options_from_collection_for_select-->