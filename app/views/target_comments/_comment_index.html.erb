<div>
  <% target.target_comments.each do |comment| %>
    <%= image_tag comment.user.get_icon, size: "50x50", class: "mt-3 rounded-circle" %>
    <%= comment.user.name %>
    <%= comment.created_at.strftime("%Y/%m/%d") %>
    <%= comment.comment %>
    <% if comment.user == current_user %>
      <%= link_to target_target_comment_path(comment.target, comment), method: :delete do %>
        <button type = "button" class = "btn btn-secondary">削除</button>
      <% end %>
    <% end %>
  <% end %>
</div>