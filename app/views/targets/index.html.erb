<h3>Userの目標一覧</h3>
<div class = "container pb-2">
  <% @targets.each do |target| %>
    <%= link_to target_path(target), class: "hover" do %>
      <div class = "row mt-2 bg-light text-center">
        <div class = "col-3">
          <%= image_tag target.user.get_icon, size: "60x60", class: "mt-3 rounded-circle" %>
        </div>
        <div class = "col-3">
          <%= target.user.name %>
        </div>
        <div class = "col-3">
          <%= target.title %>
        </div>
        <div class = "col-3">
          <p>時間100時間</p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>



