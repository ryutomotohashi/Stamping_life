<div class = "container py-5">
  <div class = "row d-flex justify-content-center">
    <%= link_to stamp_list_path do %>
      <h3>打刻時間一覧へ</h3>
    <% end %>
    <div class = "col-8 text-center text-align-center">
      <h2>3月21日(月)</h2>
      <h3>21:30:23</h3>
    </div>
    <div class = "col-4">
      <div class = "mb-3">
        <%= button_to "開始", start_stamp_path, class: "btn btn-lg btn-success m-2" %>
        <% if @stamp.present? %>
          <%= button_to "終了", end_stamp_path(@stamp), method: :patch %>
        <% else %>
          <button type = "btn" class = "btn btn-lg btn-warning m-2" disabled >終了</button>
        <% end %>
      </div>
    </div>
  </di>
</div>