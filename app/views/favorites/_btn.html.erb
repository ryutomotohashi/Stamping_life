<% if target.favorited_by?(current_user) %>
  <%= link_to target_favorites_path(target), method: :delete, local: true do %>
   ♡
    <%= target.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to target_favorites_path(target), method: :post, local: true do %>
    ❤︎
    <%= target.favorites.count %> いいね
  <% end %>
<% end %>